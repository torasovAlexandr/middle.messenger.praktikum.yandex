{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "lib": [
      "es2019",
      "dom",
      "dom.iterable"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./index.d.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}
