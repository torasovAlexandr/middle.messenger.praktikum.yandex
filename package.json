{
  "name": "prodev-chat",
  "version": "0.1.0",
  "description": "Live chat",
  "scripts": {
    "test": "mocha --require ts-node/register --require ./mochaSetup.js './src/**/*.test.ts'",
    "dev": "webpack serve --open --config webpack.dev.ts && cp -r ./static/public/* ./dist",
    "build": "webpack --config webpack.prod.ts && cp -r ./static/public/* ./dist",
    "start": "rm -rf ./dist && npm run build && node server.ts --open",
    "precommit:install": "husky install",
    "precommit": "npm run test && npm run eslint && npm run stylelint",
    "stylelint": "npx stylelint --fix **/*.{css,scss}",
    "eslint": "./node_modules/eslint/bin/eslint.js  --fix"
  },
  "author": "kami16ru",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "4.3.3",
    "@types/jsdom": "20.0.0",
    "@types/mocha": "10.0.0",
    "@types/proxyquire": "1.3.28",
    "@types/sinon": "10.0.13",
    "@types/uuid": "8.3.4",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "chai": "4.3.6",
    "css-loader": "6.7.1",
    "eslint": "7.32.0",
    "handlebars": "4.7.7",
    "handlebars-loader": "^1.7.2",
    "html-webpack-plugin": "5.5.0",
    "husky": "8.0.1",
    "jsdom": "20.0.2",
    "mini-css-extract-plugin": "2.6.1",
    "mocha": "10.1.0",
    "postcss-loader": "7.0.1",
    "proxyquire": "2.1.3",
    "sass-loader": "13.1.0",
    "sinon": "14.0.1",
    "stylelint": "14.10.0",
    "stylelint-config-standard": "27.0.0",
    "ts-loader": "9.4.1",
    "ts-node": "10.9.1",
    "typescript": "4.7.4",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "4.11.1",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "express": "4.18.1",
    "helmet": "6.0.0",
    "uuid": "8.3.2"
  },
  "engines": {
    "node": "16",
    "npm": "8"
  },
